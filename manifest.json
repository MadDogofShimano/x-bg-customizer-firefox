{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "short_name": "X BG Customizer",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "homepage_url": "https://github.com/keeno1202/x-bg-customizer",
  "permissions": ["storage"],
  "host_permissions": ["*://*.x.com/*", "*://*.twitter.com/*"],
  "action": {
    "default_title": "X Background Customizer",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*", "*://*.twitter.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
